@model Cuisine

@{
    ViewBag.Title = "Edit Cuisine";
    Layout = "_AdminLayout";
}

<form asp-action="EditCuisine" method="post">
    <input type="hidden" asp-for="CuisineID" />
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="CuisineType">Type of cuisine</label>
        <div><span asp-validation-for="CuisineType" class="text-danger"></span></div>
        <input asp-for="CuisineType" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="CuisineIndex" class="btn btn-secondary">Cancel</a>
    </div>
</form>