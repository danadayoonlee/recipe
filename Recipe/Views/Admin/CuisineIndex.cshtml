@model IEnumerable<Cuisine>

@{
    ViewBag.Title = "Edit Recipe";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">Cuisine ID</th>
        <th class="text-center">Type Of Cuisine</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var c in Model)
    {
        <tr>
            <td class="text-center">@c.CuisineID</td>
            <td class="text-center">@c.CuisineType</td>
           
            <td class="text-center">
                @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                {
                    <form asp-action="DeleteCuisine" method="post">
                        <input type="hidden" name="CuisineId" value="@c.CuisineID" />

                        <a asp-action="EditCuisine" class="btn btn-sm btn-warning" asp-route-cuisineId="@c.CuisineID">
                            Edit
                        </a>
                        <button type="submit" class="btn btn-danger btn-sm">
                            Delete
                        </button>
                    </form>
                }
            </td>
        </tr>
    }
</table>

<div class="text-center">
    <a asp-action="CreateCuisine" class="btn btn-primary">Add Cuisine</a>
</div>